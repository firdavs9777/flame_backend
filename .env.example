# Application
DEBUG=True
APP_NAME=Flame API
APP_VERSION=1.0.0

# MongoDB
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=flame_db

# JWT Secrets (generate secure random strings)
JWT_SECRET_KEY=your-super-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_REGISTER=3
RATE_LIMIT_API=100

# Photo Upload
MAX_PHOTO_SIZE=10485760
ALLOWED_PHOTO_TYPES=["image/jpeg","image/png","image/webp"]
MAX_PHOTOS_PER_USER=6

# DigitalOcean Spaces (S3-compatible storage)
DO_SPACES_KEY=your-spaces-key
DO_SPACES_SECRET=your-spaces-secret
SPACES_BUCKET=your-bucket-name
SPACES_REGION=sfo3
SPACES_ENDPOINT=sfo3.digitaloceanspaces.com
SPACES_CDN_URL=https://your-bucket-name.sfo3.cdn.digitaloceanspaces.com
SPACES_PROJECT_FOLDER=flame_backend

# Email - Mailgun
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.com
MAILGUN_REGION=us
FROM_NAME=Flame
FROM_EMAIL=noreply@your-domain.com

# Email - SendGrid (backup)
SENDGRID_API_KEY=your-sendgrid-api-key

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Frontend URL
FRONTEND_URL=https://your-app.com

# Social Auth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Social Auth - Apple
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id

# Social Auth - Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
